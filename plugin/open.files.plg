<FILE Name="/boot/config/plugins/open.files/unraid-openfiles-2025.05.21-noarch-1.txz">
<URL>https://github.com/dkaser/unraid-openfiles/releases/download/2025.05.21/unraid-openfiles-2025.05.21-noarch-1.txz</URL>
<SHA256>038449a0c85a73ae00bd2012f1a87843db664c969189a7861144db666a8df428</SHA256>
</FILE>

<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/open.files/unraid-openfiles-2025.05.21-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/open.files/unraid-openfiles-*.txz 2>/dev/null | grep -v '2025.05.21')

echo "VERSION=2025.05.21" > /usr/local/emhttp/plugins/open.files/version.ini

echo ""
echo "----------------------------------------------------"
echo " open.files has been installed."
echo " Version: 2025.05.21"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-openfiles

rm -rf /usr/local/emhttp/plugins/open.files
rm -rf /boot/config/plugins/open.files
]]>
</INLINE>
</FILE>

</PLUGIN>
